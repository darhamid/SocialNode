html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, minimum-scale=1, maximum-scale=1')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    title Friends
    link(rel='stylesheet', href='/stylesheets/jquery.mobile-1.0.css')
    link(rel='stylesheet', href='/stylesheets/jquery.mobile.scrollview.css')
    //
       <link rel="stylesheet" href="../../docs/_assets/css/jqm-docs.css" /> 
    style
      .ui-content.ui-scrollview-clip {
      padding: 0;
      }
      .ui-content.ui-scrollview-clip > div.ui-scrollview-view {
      margin: 0;
      padding: 15px;
      }
      .ui-content.ui-scrollview-clip > .ui-listview.ui-scrollview-view {
      margin: 0;
      }
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/jquery.mobile-1.0.js')
    script(src='/javascripts/jquery.easing.1.3.js')
    script(src='/javascripts/jquery.mobile.scrollview.js')
    script(src='/javascripts/scrollview.js')
  body
    #jqm-home.type-interior(data-role='page', data-theme='a')
      div(data-role='header', data-position='fixed')
        h1 Pragma-Portal
        //
           <a href="menu.html" data-transition="pop" data-theme="a" data-rel="dialog" data-icon="grid" data-iconpos="notext" class="ui-btn-left"></a> 
        //
           <a href="index.html" data-direction="reverse" data-theme="b" class="ui-btn-right">Log Out</a> 
        div(data-role='navbar')
          ul
            li
              a(href='/userinfo/profile/'+currentUser._id.toString()) Profile
            li
              a(href='/user/wallposts/'+currentUser._id.toHexString()) Wall
            li
              a(href='/userinfo') Home
      div(data-role='content')
        ol(data-role='listview', data-filter='true', data-filter-placeholder='Search Friend', data-inset='true', data-position='fixed')
          -each user in users
            li
              div
                a(href="/userinfo/profile/"+user._id.toHexString())!= user.first_name+"&nbsp;"+user.last_name
              div
                img(src='/uploads/photos/'+user.photo, width=40)
              br
              div
                span(class="user-label") User Name:
                div.user_fullname=user.first_name+'&nbsp;'+user.last_name
              br
              div
                span(class="user-label") Sex:
                div.sex= user.sex
              br
              div
                span(class="user-label") Location:
                div.location= user.location 
              br
           
      div(data-role='footer', data-position='fixed')
        h4 Powered By:Pragmatic Techsoft
